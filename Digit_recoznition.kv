<Touch_widget>:
    BoxLayout:
        orientation : 'horizontal'
        padding : 2
        spacing : 2
        x : 0
        y : 0

        width : root.width
        height : 40
        Button:
            text : 'Click me'

            background_color : 0.1,0.5,0.6,1
            on_release : root.export()
        Button:
            text : 'Clear'
            background_color : 0.1,0.5,0.6,1

            on_release : root.clear()


        Label:
            id : my_label
            text : ""

